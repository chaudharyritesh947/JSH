<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsAvtivity"
    android:background="@drawable/gradient_7">


    <include
        android:id="@+id/settings_toolbar"
        layout="@layout/app_bar_layout"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_toolbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settings_profile_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/profile" />
    <EditText
        android:id="@+id/settings_status"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/settings_profile_image"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/inputs"
        android:hint="work status"
        android:padding="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"/>



            <EditText
                android:id="@+id/settings_username"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/settings_status"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/inputs"
                android:hint="User Name"
                android:padding="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"/>



            <EditText
                android:id="@+id/settings_fullname"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/settings_username"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Full Name"
                android:padding="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"/>


            <EditText
                android:id="@+id/settings_Country"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/settings_fullname"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Country"
                android:padding="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"/>


            <EditText
                android:id="@+id/settings_dob"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/settings_Country"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="DOB"
                android:padding="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"/>



            <EditText
                android:id="@+id/settings_genders"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/settings_dob"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Gender"
                android:padding="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"/>

            <EditText
                android:id="@+id/settings_branch"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/settings_genders"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Branch"
                android:padding="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"/>


            <Button
                android:id="@+id/settings_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/settings_branch"
                android:layout_margin="20dp"
                android:background="@drawable/button"
                android:text="update Account Settings"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />



        </RelativeLayout>

    </ScrollView>


</RelativeLayout>